[user]
	name = Ben_Westrate
	email = ben.westrate@agilebits.com
	signingkey = 203066264CFCD22D

[github]
  user = benwestrate

[alias]
  br = branch
  cb = "!sh -c 'git branch $1 && git ch $1' -"
  ctb = "!sh -c 'git cb topics/$1' -"

  ci = commit
  ch = checkout
  fc = commit -am 'Initial commit.'
  cpush = "!sh -c 'git commit -au -m \"$1\" && git push -u origin' -"
  d = diff
  st = status --short

  graph = log --graph
  last = log -n 10
  url = !git remote -v|sed "'s|.*git[:@]\\(.*\\).git.*|http://\\1|;s|m:|m/|'"|uniq|xargs open
  whois = "!sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -"
  discard = checkout -- .
  rmtag = "!sh -c 'git tag -d $1; git push origin :refs/tags/$1'"

  changelog = !sh "$HOME/Developer/benwestrate/dotfiles/git-extras/git-changelog.sh"
  rstatus   = !zsh "$HOME/Developer/benwestrate/dotfiles/git-extras/git-rstatus.sh"
  release   = !sh "$HOME/Developer/benwestrate/dotfiles/git-extras/git-release.sh"
  setup     = !zsh "$HOME/Developer/benwestrate/dotfiles/git-extras/git-setup.sh"
  summary   = !zsh "$HOME/Developer/benwestrate/dotfiles/git-extras/git-summary.sh"
  delete-branch = !sh "$HOME/Developer/benwestrate/dotfiles/git-extras/git-delete-branch.sh"

  pr = "!f() { git fetch -fu ${2:-origin} refs/pull/$1/head:pr/$1; } ; f"

  ghfork = !sh "$HOME/Developer/benwestrate/dotfiles/git-extras/git-ghpull.sh"
  cleanup = !ruby "$HOME/Developer/benwestrate/dotfiles/git-extras/git-cleanup.rb"

  dsf = "!git diff --color $@ | diff-so-fancy"

[push]
  default = current

[color]
  ui = true

[core]
  editor = subl
	excludesfile = /Users/benwestrate/.gitignore_global

[format]
  pretty = %Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset
  graph = true

[advice]
  statusHints = false

[log]
  abbrevCommit = true

# URL shorthands
# gh:paulmillr/dotfiles
[url "git@github.com:"]
  insteadOf = "gh:"
  pushInsteadOf = "gh:"
  pushInsteadOf = "git://github.com/"

# gist:3928760
[url "git@gist.github.com:"]
  insteadOf = "gist:"
  pushInsteadOf = "gist:"
  pushInsteadOf = "git://gist.github.com/"

[mergetool]
	keepBackup = false
[init]
	templatedir = ~/.git_template
[ghi]
	token = !security find-internet-password -a benwestrate -s github.com -l 'ghi token' -w
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[commit]
	template = /Users/benwestrate/.stCommitMsg
	gpgsign = true
[gpg]
	program = /usr/local/MacGPG2/bin/gpg
